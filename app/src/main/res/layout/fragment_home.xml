                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/row3"
                    android:id="@+id/row5">

                    <ImageView
                        android:id="@+id/viewpredictedresults"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_baseline_online_prediction_24" />

                    <TextView
                        android:id="@+id/viewpredictedresultstext"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/viewpredictedresults"
                        android:layout_marginStart="30dp"
                        android:text="View predicted traffic signs"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"/>


                    <ImageView
                        android:id="@+id/arrow5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/baseline_arrow_forward_24_2"/>


                    <View
